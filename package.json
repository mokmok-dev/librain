{
  "name": "@librain/monorepo",
  "version": "0.0.0",
  "scripts": {
    "build": "pnpm --recursive --parallel --if-present --aggregate-output /^build/",
    "dev": "pnpm --recursive --parallel --if-present --stream /^dev/",
    "format": "biome check .",
    "prepare": "pnpm --aggregate-output /^prepare:/",
    "prepare:git": "git config --local core.hooksPath .githooks",
    "test": "pnpm --recursive --parallel --if-present --aggregate-output /^test/",
    "typecheck": "pnpm --recursive --parallel --if-present --aggregate-output /^typecheck/"
  },
  "lint-staged": {
    "**/package.json": [
      "sort-package-json"
    ],
    "**/*.{js,ts,jsx,tsx,json,md,yaml,yml}": [
      "biome check"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@types/node": "catalog:",
    "lint-staged": "catalog:",
    "sort-package-json": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "packageManager": "pnpm@10.26.2",
  "devEngines": {
    "runtime": [
      {
        "name": "node",
        "version": "24.12.0",
        "onFail": "download"
      }
    ]
  }
}
